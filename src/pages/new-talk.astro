---
import Button from "../components/Button.astro";
import Layout from "../Layout.astro";
---

<Layout>
    <section class="w-full flex flex-col justify-center items-center p-4">
        <div class="w-4/5 mx-auto bg-slate-500 rounded-xl shadow p-8 mt-12">
            <div>
                <h2>
                    <h2
                        class="text-white px-4 py-2 text-center text-3xl uppercase font-bold"
                    >
                        Nueva conferencia
                    </h2>
                    <form
                        id="new-talk-form"
                        class="w-full h-full grid grid-cols-2 gap-8 justify-between"
                    >
                        <div>
                            <div class="flex flex-col">
                                <label
                                    class="text-white px-4 py-2 text-center text-xl uppercase font-bold"
                                    for="name">Titulo</label
                                >
                                <input
                                    class="px-4 py-2 bg-slate-200 rounded-xl border-2 border-slate-900"
                                    type="text"
                                    name="name"
                                    id="name"
                                />
                            </div>
                            <div class="flex flex-col">
                                <label
                                    class="text-white px-4 py-2 text-center text-xl uppercase font-bold"
                                    for="description">Description</label
                                >
                                <textarea
                                    class="px-4 py-2 bg-slate-200 rounded-xl border-2 border-slate-900"
                                    name="description"
                                    id="description"
                                    cols="30"
                                    rows="10"></textarea>
                            </div>
                        </div>
                        <div>
                            <div class="flex flex-col">
                                <label
                                    class="text-white px-4 py-2 text-center text-xl uppercase font-bold"
                                    for="date">Fecha</label
                                >
                                <input
                                    class="px-4 py-2 bg-slate-200 rounded-xl border-2 border-slate-900"
                                    type="date"
                                    name="date"
                                    id="date"
                                />
                            </div>
                                                        <div class="flex flex-col">
                                <label
                                    class="text-white px-4 py-2 text-center text-xl uppercase font-bold"
                                    for="date">Hora</label
                                >
                                <input
                                    class="px-4 py-2 bg-slate-200 rounded-xl border-2 border-slate-900"
                                    type="time"
                                    name="hour"
                                    id="hour"
                                />
                            </div>
                                                        <div class="flex flex-col">
                                <label
                                    class="text-white px-4 py-2 text-center text-xl uppercase font-bold"
                                    for="date">Duracion</label
                                >
                                <input
                                    class="px-4 py-2 bg-slate-200 rounded-xl border-2 border-slate-900"
                                    type="number"
                                    min="30"
                                    step="10"
                                    name="duration"
                                    id="duration"
                                />
                            </div>
                        </div>
                        <div class="flex col-span-2  justify-center items-center">
                            <Button> Crear conferencia </Button>
                        </div>
                    </form>
                </h2>
            </div>
        </div>
    </section>
</Layout>
<script>
    import { actions } from "astro:actions";
    import { navigate } from "astro:transitions/client";
    const form = document.querySelector("form");
    form?.addEventListener("submit", async (event) => {
        event.preventDefault();
        const formData = new FormData(form);
        const { data, error } = await actions.createTalk(formData);
        if (error) {
            alert(error.message);
        }
        if (data?.ok) {
            navigate("/");
        }
    });
</script>
